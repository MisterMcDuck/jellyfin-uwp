<Page
    x:Class="Jellyfin.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Jellyfin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource Color10}">
            <Image 
                Source="/Assets/OnBoardingLogo.png" 
                Stretch="Uniform" 
                HorizontalAlignment="Left" 
                Height="28"
                Margin="28 0 0 0" />
        </Grid>
        <Grid Grid.Row="1" Padding="0 40 0 0">
            <StackPanel 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Width="640">
                <TextBlock
                    Text="Please sign in" 
                    Foreground="White"
                    FontSize="{StaticResource FontL}"
                    FontFamily="{StaticResource JellyfinFamilyFont}"
                    Margin="0 0 0 28"
                    HorizontalAlignment="Center" />
                <TextBox
                    PlaceholderText="User"
                    Text="{x:Bind ViewModel.UserName, Mode=TwoWay}"
                    IsEnabled="{x:Bind ViewModel.IsInteractable, Mode=OneWay}"
                    Style="{StaticResource PrimaryTextBox}"
                    Margin="0 0 0 20" />
                <PasswordBox
                    PlaceholderText="Password"
                    Password="{x:Bind ViewModel.Password, Mode=TwoWay}"
                    IsEnabled="{x:Bind ViewModel.IsInteractable, Mode=OneWay}"
                    Style="{StaticResource PrimaryPasswordBox}"
                    Margin="0 0 0 20" />
                <CheckBox
                    Content="Remember Me"
                    IsChecked="{x:Bind ViewModel.RememberMe, Mode=TwoWay}"
                    IsEnabled="{x:Bind ViewModel.IsInteractable, Mode=OneWay}"
                    Margin="0 0 0 20"
                    Style="{StaticResource PrimaryCheckBox}"
                    />
                <TextBlock 
                    Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.ShowErrorMessage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                    FontFamily="{StaticResource JellyfinFamilyFont}"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    FontSize="{StaticResource FontM}"
                    Margin="0 8 0 8"
                    Foreground="#CF4A4A" />
                <Button 
                    Content="Sign In"
                    Click="{x:Bind ViewModel.SignIn}"
                    IsEnabled="{x:Bind ViewModel.IsInteractable, Mode=OneWay}"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0 0 0 10" />
                <!-- TODO: "Use Quick Connect" button -->
                <!-- TODO: "Forgot Password" button -->
                <Button
                    Content="Change Server"
                    Click="{x:Bind ViewModel.ChangeServer}"
                    IsEnabled="{x:Bind ViewModel.IsInteractable, Mode=OneWay}"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0 0 0 10" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
